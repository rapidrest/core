{
    "name": "@rapidrest/core",
    "version": "1.0.0",
    "description": "A collection of common utilities and core functionality for rapidly building RESTful applications.",
    "repository": "https://github.com/rapidrest/core.git",
    "author": "RapidREST <rapidrests@gmail.com>",
    "license": "MIT",
    "contributors": [
        "Jean-Philippe Steinmetz",
        "Arthur Thompson",
        "Thomas Buscaglia"
    ],
    "scripts": {
        "build": "rimraf dist && tsc",
        "deploy-docs": "ts-node tools/gh-pages-publish",
        "docs": "typedoc --plugin typedoc-plugin-markdown --out docs/reference src",
        "lint": "eslint ./src ./test",
        "local-audit": "yarn install && yarn npm audit -A -R \"$@\"",
        "checkup": "yarn dlx @yarnpkg/doctor \"$@\"",
        "dependency-check": "yarn dlx depcheck \"$@\"",
        "report-coverage": "cat ./coverage/lcov.info | coveralls",
        "test": "node --loader ts-node/esm ./node_modules/vitest/vitest.mjs run",
        "test:prod": "npm run lint && node --loader ts-node/esm ./node_modules/vitest/vitest.mjs run",
        "postversion": "git push && git push --tags"
    },
    "dependencies": {
        "form-data": "^4.0.5",
        "handlebars": "^4.7.8",
        "js-yaml": "^4.1.1",
        "jsonwebtoken": "^9.0.3",
        "jszip": "^3.10.1",
        "mkdirp": "^3.0.1",
        "readline": "^1.3.0",
        "triple-beam": "^1.4.1",
        "uuid": "^13.0.0",
        "validator": "^13.15.26"
    },
    "peerDependencies": {
        "axios": "1.x",
        "reflect-metadata": "0.2.x",
        "winston": "3.x",
        "winston-transport": "4.x"
    },
    "devDependencies": {
        "@slack/bolt": "^4.6.0",
        "@slack/web-api": "^7.13.0",
        "@types/eslint": "^9.6.1",
        "@types/express": "^5.0.6",
        "@types/js-yaml": "^4.0.9",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^25.2.0",
        "@types/nodemailer": "^7.0.9",
        "@types/triple-beam": "^1.3.5",
        "@types/validator": "^13.15.10",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "axios": "^1.13.4",
        "coveralls": "^3.1.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsdoc": "^62.5.0",
        "mkdirp": "^3.0.1",
        "nconf": "^0.13.0",
        "nock": "^14.0.10",
        "nodemailer": "^7.0.13",
        "prettier": "^3.8.1",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.1.2",
        "ts-node": "^10.9.2",
        "twilio": "^5.12.0",
        "typedoc": "^0.28.16",
        "typedoc-plugin-markdown": "^4.9.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18",
        "winston": "^3.19.0",
        "winston-transport": "^4.9.0"
    },
    "resolutions": {
        "cross-spawn": "^7.0.5"
    },
    "packageManager": "yarn@4.5.0",
    "engines": {
        "node": ">=20.0.0"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "main": "dist/lib/index.js",
    "type": "module",
    "typings": "dist/types/index.d.ts",
    "files": [
        "dist",
        "docs"
    ]
}
